
<div class="container mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
            <img class="card-img-top" style="max-height:300px" src="{{this.image}}" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p class="card-text">{{this.content}}</p>
                <a href="/khoa-hoc/{{this.slug}}" class="btn btn-primary">Go somewhere</a>
            </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>